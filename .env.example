# Waaree Digital credentials
WAAREE_USER=username_here
WAAREE_PASS=your_password_here

# MQTT broker
MQTT_HOST=192.168.0.5
MQTT_PORT=1883
MQTT_TOPIC=homeassistant/waaree/energy

# Time windows (24h format)
DAY_START_HOUR=5
NIGHT_START_HOUR=19

# Intervals (seconds)
PUBLISH_INTERVAL=120
DAY_FETCH_INTERVAL=120
NIGHT_FETCH_INTERVAL=3600

# Timeouts
SETTLE_WAIT=10
EARNINGS_WAIT_SEC=30
LOGIN_TIMEOUT_MS=90000
NAV_TIMEOUT_MS=90000
FETCH_HARD_TIMEOUT_SEC=180

# MQTT retry
MQTT_INITIAL_RETRY_SEC=10
MQTT_MAX_RETRY_SEC=300

# Logging
LOG_LEVEL=INFO

# Status dashboard
STATUS_PORT=8099
